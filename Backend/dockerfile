# syntax=docker/dockerfile:1.7
FROM python:3.13-slim AS app

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

# native build deps for packages like bcrypt/psycopg2 if needed
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential curl ca-certificates && \
    rm -rf /var/lib/apt/lists/*

# We will build from the project root, but work inside /app
WORKDIR /app

# 1) install deps first (cache-friendly)
COPY Backend/requirements.txt /app/requirements.txt
RUN pip install --upgrade pip && pip install -r requirements.txt

# 2) copy backend code into /app (so /app/wsgi.py exists)
COPY Backend/ /app/

# 3) copy frontend so your template_path = ../Frontend works
COPY FrontEnd/ /FrontEnd/

# security: run as non-root
RUN useradd -m appuser && chown -R appuser:appuser /app
USER appuser

EXPOSE 8000

# If you later add a /health route, you can re-enable:
# HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
#   CMD curl -fsS http://localhost:8000/health || exit 1

# Start via Gunicorn (wsgi.py must be at /app/wsgi.py and define `app`)
CMD ["gunicorn", "-w", "3", "-k", "gthread", "--threads", "8", "-b", "0.0.0.0:8000", "wsgi:app"]
